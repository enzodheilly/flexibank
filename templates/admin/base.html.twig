<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-blue-800 text-white p-6">
            <div class="mb-8">
                <h1 class="text-2xl font-bold">FlexibankAdmin</h1>
            </div>
            <nav>
                <a href="{{ path('admin_dashboard') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_dashboard' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="{{ path('admin_users') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_users' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-users"></i>
                    <span>Utilisateurs</span>
                </a>
                <a href="{{ path('admin_transfers') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_transactions' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-receipt"></i>
                    <span>Transactions</span>
                </a>
                <a href="{{ path('admin_cards') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_cards' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-credit-card"></i>
                    <span>Cartes</span>
                </a>
                <a href="{{ path('admin_loans') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_loans' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-piggy-bank"></i>
                    <span>Prêts</span>
                </a>
                <a href="{{ path('admin_tickets') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_tickets' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-ticket"></i>
                    <span>Tickets</span>
                </a>
                {% if 'ROLE_ADMIN' in app.user.roles %}
                <a href="{{ path('admin_admins') }}" class="flex items-center space-x-3 p-3 rounded-lg transition-colors {{ app.request.get('_route') == 'admin_admins' ? 'bg-blue-700 text-white' : 'text-blue-100 hover:bg-blue-700' }}">
                    <i class="fas fa-shield"></i>
                    <span>Administrateurs</span>
                </a>
                {% endif %}
            </nav>
            <div class="absolute bottom-0 left-0 w-64 p-6">
                <a href="{{ path('app_logout') }}" class="flex items-center space-x-3 text-blue-100 hover:text-white w-full">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Déconnexion</span>
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            {% block body %}{% endblock %}
        </div>
    </div>

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    {% endblock %}
</body>
</html>