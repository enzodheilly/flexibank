      .d-md-none {
        display: none !important;
      }
    }
    
    @media (max-width: 768px) {
      .d-md-none {
        display: inline-block !important;
      }
    }
    
    @media (max-width: 768px) {
      .modern-navbar .btn-secondary.d-md-none {
        margin-left: 0;
        margin-right: -50px;
        font-size: 0.85rem;
