{% extends 'base.html.twig' %}

{% block title %}
  Suivi de la commande
{% endblock %}

{% block body %}

<style>
.request-card {
    width: 100%;
    text-align: center;
}

.status {
    display: inline-block;
    background: #EDE7F6;
    color: purple;
    padding: 8px 15px;
    font-size: 14px;
    font-weight: bold;
    border-radius: 20px;
    margin-top: 10px;
}

.card, .request-card-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 25px;
    text-align: center;
    width: 48%;
    min-width: 250px;
}
</style>

<h1>Suivi de ma commande de carte</h1>

{% if cardOrder %}
  <div class="request-card-container">
    <div class="request-card">
      <h3>Suivi de votre demande</h3>
      
      {# Afficher l'ID de la commande (r√©ellement g√©n√©r√© en fonction de la commande) #}
      <p><strong>Demande #REQ-{{ cardOrder.id }}</strong></p>
      
      {# Afficher le type de carte (ici, je suppose qu'il y a un champ "cardType" dans ton mod√®le) #}
      <p>Type de carte: {{ cardOrder.cardType }}</p>
      
      {# Afficher la date de la demande, en format lisible #}
      <p>Date de demande: {{ cardOrder.orderDate|date('d/m/Y') }}</p>
      
      {# Afficher le statut de la commande #}
      <span class="status">
        {# Tu peux personnaliser l'emoji ou le texte en fonction du statut #}
        {% if cardOrder.status == 'pending' %}
          ‚è≥ En cours de traitement
        {% elseif cardOrder.status == 'sent' %}
          üì¶ Envoy√©e
        {% elseif cardOrder.status == 'completed' %}
          ‚úÖ Termin√©e
        {% else %}
          ‚ö†Ô∏è Statut inconnu
        {% endif %}
      </span>
    </div>
  </div>
{% else %}
    <p>{{ message }}</p>
{% endif %}

{% endblock %}
