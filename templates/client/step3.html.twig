{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription | Flexibank{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('css/client/step3.css') }}" />

{% endblock %}

{% block body %}

<nav>
    <!-- Bouton "Étape précédente" utilisant JavaScript -->
