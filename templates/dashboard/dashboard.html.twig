</div>
      </div>
    {% else %}
      <p style="text-align:center; margin-top: 20px;">Aucune demande enregistr√©e pour le moment.</p>
    {% endfor %}
  </div>
</div>

{% endif %}

<script>
function updateOrderStatus(orderId, newStatus) {
    fetch(`/update-status/${orderId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ status: newStatus })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Mettre √† jour l'affichage du statut dans la page (exemple : changer la couleur ou le texte)
            const statusElement = document.getElementById(`status-${orderId}`);
            statusElement.textContent = newStatus;  // Mise √† jour du statut affich√©
            statusElement.className = `status-${newStatus}`;  // Appliquer la nouvelle classe CSS
        }
    })
    .catch(error => console.error('Erreur lors de la mise √† jour du statut', error));
}

</script>

{% endblock %}
