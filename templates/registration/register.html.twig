{% extends 'base.html.twig' %}

{% block title %}Créer un compte | FlexiBank{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('css/registration/register.css') }}" />

{% endblock %}

{% block body %}

<div class="wrapper">
  <h1 class="form-title">Créer un compte</h1>
   <p>Faites partie de l’élite FlexiBank.</p>

  {% for message in app.session.flashbag.get('error') %}
    <div class="error-message">{{ message }}</div>
  {% endfor %}

  {{ form_start(registrationForm) }}
    {{ form_widget(registrationForm.nom, {'attr': {'placeholder': 'Nom'}}) }}
    {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Prénom'}}) }}
    {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
    {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
    <button type="submit">Créer mon compte</button>
  {{ form_end(registrationForm) }}

  <div class="login-prompt">
    Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
  </div>
</div>

{% endblock %}
