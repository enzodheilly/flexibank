{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #1e1e1e;
            color: #f2f2f2;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 400px;
        }

        .form-container {
            background-color: #1e1e1e;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
        }

        .form-container h2 {
            font-size: 1.8em;
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 14px;
            margin-bottom: 20px;
            border: 1px solid #444;
            border-radius: 8px;
            background-color: #1e1e1e;
            color: #ddd;
            font-size: 1.1em;
        }

        button {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 8px;
            background-color: #0059ff;
            color: #fff;
            font-size: 1.2em;
            cursor: pointer;
            margin-top: 10px;
        }

        .login-prompt {
            margin-top: 15px;
            text-align: center;
            font-size: 1em;
            color: #f2f2f2;
        }

        .login-prompt a {
            color: #0059ff; /* Lien en bleu */
            text-decoration: none;
            font-weight: bold;
        }

        .login-prompt a:hover {
            text-decoration: underline;
        }

        .header {
            position: absolute;
            top: 25px;
            left: 35px;
        }

        .logo {
            color: #007bff;
            font-size: 1.8em;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            margin: 0;
        }

        .error-message {
            color: red;
            font-size: 0.9em;
            margin-bottom: 20px;
            text-align: center;
        }
    </style>

    <div class="header">
        <h1 class="logo">Flexibank</h1>
    </div>

    <div class="wrapper">
        <div class="form-container">
            <h2>Créez un compte</h2>

            {# Affichage du message d'erreur en haut de la page #}
            {% for message in app.session.flashbag.get('error') %}
                <div class="error-message">
                    {{ message }}
                </div>
            {% endfor %}

            {# Formulaire en Twig sans labels #}
            {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm.nom, {'attr': {'placeholder': 'Nom'}}) }}
                {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Prénom'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                <button type="submit">Sign up</button>
            {{ form_end(registrationForm) }}

            <p class="login-prompt">
                Vous êtes déjà membre ? <a href="{{ path('app_login') }}">Connectez-vous</a>
            </p>
        </div>
    </div>
{% endblock %}
