                    <i class="fas fa-credit-card action-icon"></i>
                </div>
                <span class="action-text">Cartes</span>
            </a>
            <a href="{{ path('crypto') }}" class="action-btn">
                <div class="action-icon-container">
                    <i class="fab fa-bitcoin action-icon"></i>
                </div>
                <span class="action-text">Crypto</span>
            </a>
           <a href="{{ loanRequestInProgress ? path('loan_request_tracking') : path('loan_request') }}" class="action-btn">
    <div class="action-icon-container">
        <i class="fas fa-wallet action-icon"></i>
    </div>
    <span class="action-text">Prêts</span>
</a>

        </div>

        {# Tabs #}
        <div class="tabs-container">
            <nav class="tabs-nav">
                <a href="{{ path('card_dashboard', {'tab': 'accounts'}) }}" 
                   class="tab-btn {{ app.request.get('tab') == 'accounts' or app.request.get('tab') is null ? 'active' : '' }}">
                    Comptes
                </a>
            </nav>
        </div>

        {% if app.request.get('tab') != 'crypto' %}
