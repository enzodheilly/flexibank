        font-weight: 600;
        color: #1f2937;
    }

    .account-actions {
        display: flex;
        gap: 0.75rem;
    }

    .account-action-btn {
        color: #2563eb;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        background: none;
        border: none;
        cursor: pointer;
    }

    .account-action-btn:hover {
        color: #1d4ed8;
    }

    /* Transactions */
