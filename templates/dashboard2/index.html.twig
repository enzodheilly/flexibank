                        <h3>Compte Courant</h3>
                        {% if currentAccount %}
                            <div class="account-card">
                                <div class="account-header">
                                    <div>
                                        <h4 class="account-name">{{ currentAccount.accountType }}</h4>
                                        <p class="account-number">FR **** **** **** {{ currentAccount.iban|slice(-4) }}</p>
