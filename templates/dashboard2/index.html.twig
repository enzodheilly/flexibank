{% block body %}
    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {# Header avec bouton retour et pastille de notifications #}
    <header class="header">
        <div class="header-container">
            <div class="header-content">
                <a href="{{ path('app_home') }}" class="back-button">← Retour</a>
                <div class="header-actions" style="display: flex; align-items: center; gap: 10px;">
                    <div id="notification-icon" class="notification-container">
                        <i class="fas fa-bell"></i>
                        
                        {% set unreadNotificationsCount = unreadNotifications|length %}
                        {% if unreadNotificationsCount > 0 %}
                            <span id="notification-dot" class="notification-dot"></span> <!-- pastille rouge -->
                        {% endif %}
                    </div>
                    <span class="user-id">
                        <p>ID: {{ app.user.codeClient }}</p>
                    </span>
                </div>
            </div>
        </div>
    </header>

    {# Modal de notifications #}
<div id="notification-modal" class="notification-modal">
    <div class="modal-content">
        <span class="close-btn" id="close-notification">&times;</span>
        <h3>Vos notifications</h3>
        <div id="notification-list">
            {% if unreadNotifications is not empty %}
                {% for notification in unreadNotifications %}
                    <div class="notification-item {{ not notification.isRead ? 'unread' : 'read' }}">
                        <p>
                            {{ notification.description }} <br>
                            <small class="notification-date">
                                {{ notification.createdAt|date('d M Y à H:i') }} <!-- Format date amélioré -->
                            </small>
                        </p>
                        {% if not notification.isRead %}
                            <a href="{{ path('mark_as_read', {'id': notification.id}) }}" class="mark-read-btn">Marquer comme lue</a>
                        {% else %}
                            <span class="read-status">(Lue)</span>
                        {% endif %}
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucune notification pour le moment.</p>
            {% endif %}
        </div>
    </div>
</div>





    <main class="main-container">
