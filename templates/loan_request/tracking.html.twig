{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
/* Modern Loan Tracking Styles */
.loan-tracking-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 2.5rem 1.25rem;
    font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
}

.loan-tracking-title {
    color: #1E293B;
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
}

.loan-tracking-title::after {
    content: '';
    position: absolute;
    bottom: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: #4F46E5;
    border-radius: 2px;
}

.loan-table {
    width: 100%;
    max-width: 900px;
    border-collapse: collapse; /* Ensure proper cell layout */
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                0 2px 4px -1px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    margin-bottom: 2rem;
}

.loan-table th, .loan-table td {
    padding: 1.25rem 1rem;
    text-align: center; /* Center the content in both th and td */
    color: #1F2937;
    border-bottom: 1px solid #E5E7EB;
    font-size: 0.95rem;
}

.loan-table th {
    background: #4F46E5;
    color: white;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
}

.loan-table tr:last-child td {
    border-bottom: none;
}

.loan-table tr:hover {
    background-color: #F8FAFC;
}

.status-approved {
    color: #059669;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    background: #ECFDF5;
    border-radius: 9999px;
}

.status-pending {
    color: #B45309;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    background: #FFFBEB;
    border-radius: 9999px;
}

.status-rejected {
    color: #DC2626;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    background: #FEF2F2;
    border-radius: 9999px;
}

.action-button {
    background: #4F46E5;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.5rem;
}

.action-button:hover {
    background: #4338CA;
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.return-button {
    background: #6B7280;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.5rem;
}

.return-button:hover {
    background: #4B5563;
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.button-container {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
}

@media (max-width: 768px) {
    .loan-tracking-title {
        font-size: 1.75rem;
    }

    .loan-table {
        font-size: 0.875rem;
    }

    .loan-table th,
    .loan-table td {
        padding: 1rem 0.75rem;
    }

    .action-button,
    .return-button {
        width: 100%;
        justify-content: center;
    }
}
    </style>
{% endblock %}

{% block body %}
<div class="loan-tracking-container">
    <h2 class="loan-tracking-title">Suivi de vos demandes de prêt</h2>

    <table class="loan-table">
        <thead>
            <tr>
                <th>Date de demande</th>
                <th>Montant</th>
                <th>Statut</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for loanRequest in loanRequests %}
                <tr>
                    <td>{{ loanRequest.requestDate|date('d/m/Y H:i') }}</td>
                    <td>{{ loanRequest.amount|number_format(2, ',', ' ') }} €</td>
                    <td class="status-{{ loanRequest.status|lower }}">
                        {{ loanRequest.status }}
                    </td>
                    <td>
                        {% if loanRequest.status == 'En Attente' %}
                            <a href="{{ path('cancel_loan_request', {'id': loanRequest.id}) }}" class="action-button">Annuler</a>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune demande en cours.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="button-container">
        <a href="{{ path('loan_request') }}" class="action-button">Nouvelle demande</a>
        <a href="{{ path('dashboard2') }}" class="return-button">Retour au dashboard</a>
    </div>
</div>
{% endblock %}
